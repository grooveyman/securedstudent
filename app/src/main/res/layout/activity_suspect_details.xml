<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"

    tools:context=".SuspectDetails">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginTop="20dp"
        android:id="@+id/susDetailImg"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textSize="22dp"
                android:text="Name:"/>
            <TextView
                android:id="@+id/nameOfSuspectDetail"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Name of culprit goes here"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textSize="22dp"
                android:text="Programme:"/>
            <TextView
                android:id="@+id/programOfSuspectDetail"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Programme of culprit goes here"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textSize="22dp"
                android:text="Status:"/>
            <TextView
                android:id="@+id/statusOfSuspectDetail"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Status Whether rusticated or suspect"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>



    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="22dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:text="Details:"
        />
    <TextView
        android:id="@+id/susDetailsDetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:text="Lorem Ipsum"/>


</LinearLayout>